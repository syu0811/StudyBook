.single-container
  %h1
    = t '.title'

  = link_to t('.registration'), new_admin_category_path, class: 'btn btn-success mb-3'

  %table.table.text-nowrap
    %thead.thead-light
      %tr
        %th.col-7
          = t '.name'
        %th.col-5
    %tbody
      - @categories.each do |category|
        %tr
          %td
            = category.name
          %td
            = link_to t('.edit'), edit_admin_category_path(category.id), class: 'btn btn-outline-dark'
            = link_to t('.delete'), admin_category_path(category.id), method: :delete, data: {confirm: t('.confirm')}, class: 'btn btn-danger'
